@require "../variables.styl"
@require "../normalize.styl"

use-top-tips = false

dashboard(wrapperClass = 'page-main')
  .{wrapperClass}
    &.dashboard
      shadow-text()
        RGBA(0, 0, 0, .6)

      block-param-text()
        font-size 14px
        line-height 1.6
        shadow-text()

      $block-width = 342px
      if use-top-tips
        page-main-height-with-top-tips()

      text-align justify

      > h2
        margin-top 0
        margin-bottom 4 * $size-unit
        color #1e80f0
        // color #dde7f3
        font-size 30px
        font-weight 300
        line-height 1.5

        > .start-notation
          font-size 14px
          line-height 1.6
          shadow-text()
          // color white

    $block-padding = 12px
    $block-width = 342px
    $block-height = 192px

    .matrix
      overflow-y hidden
      margin 0 auto
      max-width $block-width * 3 + 3 * (2 * $block-padding)
      font-size: 18px
      margin-bottom $size-offset

      & + .matrix
        margin-top $size-offset

      &-title
        display block
        color $primary-color
        padding-top $size-unit
        padding-bottom $size-unit
        padding-left 2 * $size-unit
        font-size: 20px

    .block
      display block
      float left
      border-radius 4px
      min-width $block-width
      min-height $block-height
      height $block-height
      position relative
      cursor pointer
      color black
      margin-bottom 12px
      box-shadow 0 1px 4px rgba(0, 0, 0, 0.2), 0 5px 15px rgba(0, 0, 0, 0.4)

      &:not(:last-child)
        margin-right $size-offset

      &:hover
        box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.4), inset 0 1px 4px rgba(0, 0, 0, 0.7)

      &.statics
        background-size cover
        color invert(black)

      > .title
        margin-top 2 * $size-unit
        margin-left 2 * $size-unit
        display inline-block
        position absolute
        font-size 18px
        line-height 1.5

        > .sub-title
          font-size 13px
          line-height 1.6
          shadow-text()

      p.short-tips
        position absolute
        left 2 * $size-unit
        bottom 38.6px
        block-param-text()

  .ie-lte8
    .{wrapperClass}.dashboard
      .block
        outline 1px solid #eee

        & + .block
          margin-left $size-offset

        &.hue-underTheEarth
          filter: unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#4c4c4c', endColorstr='#131313',GradientType=1 )")
          // -ms-filter: "progid:DXImageTransform.Microsoft.gradient (GradientType=0, startColorstr=#1471da, endColorstr=#1C85FB)"
